@model TropicalBears.Model.DataBase.Model.User

@{
    ViewBag.Title = "Index";
}

<h2>@Model.Nome</h2>

<div>
    <h4>Dados da Conta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Senha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Senha)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>

    </dl>
</div>
<hr />
@if (Model.Enderecos.Count() > 0)
{
    <div class="row">
        <h4 class="col-md-1">Endereço</h4>
        <select class="form-control col-md-offset-1">
            @foreach (var item in Model.Enderecos)
            {
                <option value="@item.Id">@item.Descricao</option>
            }
        </select>
        <a onclick="toggleForm()" class="btn btn-group-sm" style="color:gray">add</a>

    </div>


    <div class="row" id="formEndereco" style="display:none">
        @using (Html.BeginForm("AddEndereco", "User", FormMethod.Post))
        {
            <h4>Novo Endereço</h4>
            <div class="col-md-offset-1" style="margin-top:2%">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label for="descricao">Descrição</label>

                        <input type="text" class="form-control" name="descricao" id="descricao" />

                    </div>

                    <div class="form-group">
                        <label for="logradouro">Logradouro</label>

                        <input type="text" class="form-control" name="logradouro" id="logradouro" />

                    </div>

                    <div class="form-group">
                        <label for="cep">CEP</label>

                        <input type="text" class="form-control" name="cep" id="cep" />

                    </div>

                    <div class="form-group">
                        <label for="bairro">Bairro</label>

                        <input type="text" class="form-control" name="bairro" id="bairro" />

                    </div>

                    <div class="form-group">
                        <label for="numero">Numero</label>

                        <input type="text" class="form-control" name="numero" id="numero" />

                    </div>

                    <div class="form-group">
                        <label for="complemento">Complemento</label>

                        <input type="text" class="form-control" name="complemento" id="complemento" />

                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
        <hr />

}
@if (Model.Enderecos == null || Model.Enderecos.Count() == 0)
{
    <div class="row">
        @using (Html.BeginForm("AddEndereco", "User", FormMethod.Post))
        {
            <h4>Adicionar Endereço</h4>
            <div class="col-md-offset-1" style="margin-top:2%">
            <div class="form-horizontal">
              
                <div class="form-group">
                    <label for="descricao">Descrição</label>
        
                        <input type="text" class="form-control" name="descricao" id="descricao" />
           
                </div>

                <div class="form-group">
                        <label for="logradouro">Logradouro</label>
       
                       <input type="text" class="form-control" name="logradouro" id="logradouro" />
       
                </div>

                <div class="form-group">
                    <label for="cep">CEP</label>
       
                        <input type="text" class="form-control" name="cep" id="cep" />
               
                </div>

                <div class="form-group">
                    <label for="bairro">Bairro</label>
                 
                        <input type="text" class="form-control" name="bairro" id="bairro" />
                    
                </div>

                <div class="form-group">
                    <label for="numero">Numero</label>
              
                        <input type="text" class="form-control" name="numero" id="numero" />
            
                </div>

                <div class="form-group">
                    <label for="complemento">Complemento</label>

                        <input type="text" class="form-control" name="complemento" id="complemento" />
                   
                </div>
                

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-default" />
                    </div>
                </div>
            </div>
                </div>

        }

    </div>
}
    


<h2>Histórico de Pesquisas</h2>
<table class="table table-striped">
    <tr>
        <th>Data</th>
        <th>Categoria</th>
        <th>Nome</th>
        <th>Preço Minimo</th>
        <th>Preço Maximo</th>
    </tr>
    @foreach (var item in Model.Pesquisas)
    {
        <tr>
            <td>@item.Data</td>
            <td>@item.Categoria</td>
            <td>@item.Nome</td>
            <td>@item.PrecoMinimo</td>
            <td>@item.PrecoMaximo</td>
      </tr>

    }   
</table>

<script>
    function toggleForm() {
        var form = document.getElementById("formEndereco");
        form.setAttribute("style", "display:block");
        console.log(form);
    }
</script>



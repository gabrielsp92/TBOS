<div class="row">
    @using (Html.BeginForm("AddEndereco", "User", FormMethod.Post))
    {
        <h4>Novo Endereço</h4>
        <dl class="col-lg-offset-1">
            <dt>Descrição</dt>
            <dd><input class="form-control" type="text" name="descricao" /></dd>
            <dt>Logradouro</dt>
            <dd><input class="form-control" type="text" name="logradouro"  /></dd>
            <dt>CEP</dt>
            <dd><input class="form-control" type="text" name="cep" /></dd>
            <dt>Bairro</dt>
            <dd><input class="form-control" type="text" name="bairro" /></dd>
            <dt>Numero</dt>
            <dd><input class="form-control" type="text" name="numero" /></dd>
            <dt>Complemento</dt>
            <dd><input class="form-control" type="text" name="complemento"/></dd>
        </dl>
        <div class="row col-lg-offset-1">
            <button class="btn btn-sm"><span class="glyphicon glyphicon-save"></span> Salvar</button>
        </div>

    }

</div>

